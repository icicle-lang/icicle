version:               0.0.1
license:               BSD3
license-file:          LICENSE
author:                Ambiata <info@ambiata.com>
maintainer:            Ambiata <info@ambiata.com>
copyright:             (c) 2015 Ambiata.
synopsis:              Icicle Source language parser and type checker.
category:              System
cabal-version:         >= 1.8
build-type:            Simple
description:           Icicle Source language parser, type checker, and elaborator.

extra-source-files:
  data/libs/prelude.icicle

library
  build-depends:
                       base                            >= 3          && < 5
                     , icicle-data
                     , icicle-core
                     , ambiata-anemone
                     , ambiata-p
                     , ambiata-x-show
                     , aeson                           >= 0.8        && < 1.5
                     , ansi-terminal                   == 0.6.*
                     , bifunctors                      >= 4.2        && < 5.6
                     , bytestring                      == 0.10.*
                     , containers                      == 0.5.*
                     , filepath                        >= 1.3        && < 1.5
                     , directory
                     , file-embed                      == 0.0.9
                     , hashable
                     , lens                            >= 4.7        && < 4.19
                     , mmorph                          >= 1.0
                     , scientific                      == 0.3.*
                     , semigroups                      >= 0.16       && < 0.20
                     , unordered-containers            == 0.2.*
                     , text                            == 1.2.*
                     , thyme                           == 0.3.*
                     , time                            >= 1.5        && < 1.10
                     , time-locale-compat              == 0.1.*
                     , transformers                    >= 0.3        && < 0.6
                     , transformers-either
                     , validation                      >= 1          && < 1.2
                     , vector
                     -- Well, it might look very odd that we're using both attoparsec
                     -- and parsec.
                     -- The thing is, attoparsec only operates on raw strings, and our source parser
                     -- for Icicle should operate over tokens.
                     -- Going over tokens instead of strings simplifies the parser itself and makes everything
                     -- a bit cleaner.
                     -- As an added benefit, parsec will give us nicer error messages.
                     , attoparsec                      >= 0.12       && < 0.14
                     , megaparsec                      >= 7.0        && < 8.0
                     ,     parsec                      == 3.1.*

  ghc-options:
                       -Wall

  hs-source-dirs:
                       src

